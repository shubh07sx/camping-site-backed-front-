<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p>Yelpcamp</p>
            <div class="list-group">
                <div class="list-group-item active">Info 1</div> 
                <div class="list-group-item">Info 2</div>
                <div class="list-group-item">Info 3</div>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                    <p><img class="img-responsive" src="<%= campground.image%>"></p>
                    <div class="caption-full">
                    <h4><div class="pull-right">$9.00/Night</div></h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%=campground.description%></p>
                    <p><em>Submitted By - <%=campground.author.username%></em></p>
                    <a class="btn btn-xs btn-warning" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    <form id="delete-form" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                         <button class="btn btn-xs btn-danger">DELETE</button>
                    </form>
                    </div>
            </div>
            <div class="well">
                <div class="text-right">
                     <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <!-- now we need to add comments for a particular photo so we need to loop through each of the comments -->
                <% campground.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                         <strong><%= comment.author.username %></strong>
                         <div class="pull-right">10 days ago</div>
                          <p>   <%=comment.text%> </p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer %>